---
template: atom.xml
---

{%- for article in site.articles %}
  <entry>
    <title>{{ article.title }}</title>
    <link href="http://philipwalton.com/articles/{{ article.slug }}"/>
    <updated>{{ article.date | format('YYYY-MM-DDTHH:mm:ssZ') }}</updated>
    <id>http://philipwalton.com/articles/{{ article.slug }}</id>
  </entry>
{% endfor -%}
